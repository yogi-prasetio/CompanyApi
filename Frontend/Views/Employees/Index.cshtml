
@{
    ViewData["Title"] = "Employees";
    Layout = "~/Views/Shared/DataTablesLayout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Employees</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Employees</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">

                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Employee Table</h3>
                            <!-- Button trigger modal -->
                            <button type="button" class="btn btn-success float-right" data-toggle="modal" data-target="#formModal" onclick="SetModal('add')" data-tooltip="tooltip" data-placement="left" title="Add New Employee">
                                <i class="fas fa-plus"></i>
                            </button>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="tbl-employee" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>No</th>
                                        <th>First Name</th>
                                        <th>Last Name</th>
                                        <th>Email</th>
                                        <th>Phone Number</th>
                                        <th>Address</th>
                                        <th>Status</th>
                                        <th>Department</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>

<div class="modal fade" id="formModal" tabindex="-1" aria-labelledby="formModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="formModalLabel"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" >
                <form name="employee" method="POST" id="employee" class="needs-validation" novalidate>
                    <div class="form-group col-12 mb-2" id="nik_column">
                        <label for="nik">NIK</label>
                        <input type="text" class="form-control" name="nik" id="nik" disabled required />
                    </div>
                    <div class="form-group col-12 mb-2">
                        <label for="first_name">First Name</label>
                        <input type="text" class="form-control" name="first_name" id="first_name" placeholder="First Name" required />
                        <span id="message_first_name" style="color: red; font-size: 14px;"></span>
                    </div>
                    <div class="form-group col-12 mb-2">
                        <label for="last_name">Last Name</label>
                        <input type="text" class="form-control" name="last_name" id="last_name" placeholder="Last Name" required />
                        <span id="message_last_name" style="color: red; font-size: 14px;"></span>
                    </div>
                    <div class="form-group col-12 mb-2">
                        <label for="phone">Phone Number</label>
                        <input type="number" class="form-control" name="phone" id="phone" placeholder="Phone Number" required />
                        <span id="message_phone" style="color: red; font-size: 14px;"></span>
                    </div>
                    <div class="form-group col-12 mb-2">
                        <label for="address">Address</label>                        
                        <textarea name="address" id="address" class="form-control" placeholder="Address.." required></textarea>
                        <span id="message_address" style="color: red; font-size: 14px;"></span>
                    </div>
                    <div class="form-group col-12 mb-2" id="status_column">
                        <label for="status">Status</label>
                        <select name="status" id="status" class="form-control">
                            <option value="true">Active</option>
                            <option value="false">Non Active</option>
                        </select>
                        <span id="message_status" style="color: red; font-size: 14px;"></span>
                    </div>
                    <div class="form-group col-12 mb-2">
                        <label for="department_id">Department</label>
                        <select name="department_id" id="department_id" class="form-control">
                            <option selected disabled>-- Choose Department --</option>
                        </select>
                        <span id="message_department" style="color: red; font-size: 14px;"></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="Insert" onclick="Insert();"><i class="fas fa-save"></i>&nbsp; Add</button>
                <button type="button" class="btn btn-warning text-white" id="Update" onclick="Update();"><i class="fas fa-edit"></i>&nbsp; Update</button>
            </div>
        </div>
    </div>
</div>
